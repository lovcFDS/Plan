<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >
    <LinearLayout
        android:id="@+id/popup_title"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/my_ic_lanuncher"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Todo计划"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:id="@+id/popup_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/popup_title"
        android:background="#ff6b6a"/>

    <TextView
        android:id="@+id/popup_tv_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_below="@id/popup_title"
        android:text="修改用户名和签名："/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/popup_tv_change"
        android:orientation="vertical">

        <EditText
            android:id="@+id/popup_ed_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/popup_ed_shape"
            android:hint="  输入用户名"/>
        <EditText
            android:id="@+id/popup_ed_user_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/popup_ed_shape"
            android:hint="  输入签名"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/popup_btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/popup_ed_shape"
                android:text="取消"
                android:textColor="#ff6b6a"
                android:textSize="12sp"/>
            <Button
                android:id="@+id/popup_btn_ok"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_all"
                android:text="确定"
                android:textColor="#3300ff"
                android:textSize="12sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </LinearLayout>


</RelativeLayout>